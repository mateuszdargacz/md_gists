<html>

<head>
<%= render "import_bs" %>
</head>
<body>
<ul class="nav nav-tabs">
  <li class="active"><a href="#">All Gists</a></li>
  <li><%= link_to 'New Gist', new_gist_path %></li>
</ul>
<h1>Listing gists</h1>

<table class="table table-bordered table-hovered">
  <thead>
  <tr>
    <th>Snippet</th>
    <th>Lang</th>
    <th>Description</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @gists.each do |gist| %>
      <tr>
        <td><%= gist.snippet %></td>
        <td><%= gist.lang %></td>
        <td><%= gist.description %></td>
        <td><%= link_to 'Show', gist %></td>
        <td><%= link_to 'Edit', edit_gist_path(gist) %></td>
        <td><%= link_to 'Destroy', gist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

</body>

</html>
